{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext", // Crucial for modern Node.js
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "."
    },
    "include": [
        "src/**/*",
        "hardhat.config.cts"
    ]
}